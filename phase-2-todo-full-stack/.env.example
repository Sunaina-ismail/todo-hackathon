# Environment Variables for Docker Compose
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_DB=todo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Database URL for applications
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/todo_db

# ============================================
# Authentication (Better Auth)
# ============================================
# CRITICAL: Generate a secure random secret
# Use: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secure_random_secret_here_min_32_chars

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8001
ENVIRONMENT=production

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000

# API URL (backend endpoint)
NEXT_PUBLIC_API_URL=http://localhost:8001

# Better Auth URLs
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Production Deployment (Optional)
# ============================================
# For production, update these with your actual domains:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# BETTER_AUTH_URL=https://yourdomain.com
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# ALLOWED_ORIGINS=https://yourdomain.com
