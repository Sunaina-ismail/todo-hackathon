# Database Configuration
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@YOUR_HOST.neon.tech/neondb?sslmode=require&application_name=todo-app

# Authentication - MUST match Next.js BETTER_AUTH_SECRET
BETTER_AUTH_SECRET=your-super-secret-key-here-make-it-long-and-random-at-least-32-chars

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION=604800  # 7 days in seconds

# Neon Database Pool Configuration (Serverless Optimized)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=300  # 5 minutes

# Environment
ENVIRONMENT=development  # development, staging, production
